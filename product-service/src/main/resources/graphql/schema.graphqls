type Product {
    id: ID!
    name: String!
    description: String
    price: Float!
    quantity: Int!
    imgUrl: String
}

type Query {
    getAllProducts: [Product]
    getProductById(id: ID!): Product
}

type Mutation {
    createProduct(name: String!, description: String!, price: Float!, quantity: Int!, imgUrl: String!): Product
    updateProduct(id: ID!, name: String!, description: String!, price: Float!, quantity: Int!, imgUrl: String!): Product
    deleteProduct(id: ID!): Boolean
}
